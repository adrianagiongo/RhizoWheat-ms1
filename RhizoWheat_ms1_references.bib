   keywords = {Anaerobic digestion,Codigestion,Microbial community,Sewage sludge},
   month = {9},
   pages = {612-626},
   pmid = {23678985},
   title = {454 pyrosequencing analyses of bacterial and archaeal richness in 21 full-scale biogas digesters},
